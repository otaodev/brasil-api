{
    "name": "otaodev/brasil-api",
    "description": "Biblioteca de integração com a Brasil API",
    "type": "library",
    "license": "GNU",
    "scripts": {
        "test": "phpunit",
        "test:watch": [
            "Composer\\Config::disableProcessTimeout",
            "phpunit-watcher watch < /dev/tty"
        ]
    },
    "autoload": {
        "psr-4": {
            "Otaodev\\BrasilApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Tiago Aparacido de Oliveira",
            "email": "contato@otao.dev.br"
        }
    ],
    "minimum-stability": "stable",
    "require-dev": {
        "phpro/grumphp": "^1.15",
        "squizlabs/php_codesniffer": "^3.7",
        "phpmd/phpmd": "^2.13",
        "phpstan/phpstan": "^1.9",
        "phpunit/phpunit": "*",
        "spatie/phpunit-watcher": "^1.23"
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp": true
        }
    },
    "require": {
        "guzzlehttp/guzzle": "^7.5"
    }
}
